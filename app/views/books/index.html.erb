<h1>Listing books</h1>

<table>
  <tr>
    <th>Id book</th>
    <th>Title</th>
    <th>Autor</th>
    <th>Id publishing house</th>
    <th>Image</th>
    <th>Description</th>
    <th>String</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.id_book %></td>
    <td><%= book.title %></td>
    <td><%= book.autor %></td>
    <td><%= book.id_publishing_house %></td>
    <td><%= book.image %></td>
    <td><%= book.description %></td>
    <td><%= book.string %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

